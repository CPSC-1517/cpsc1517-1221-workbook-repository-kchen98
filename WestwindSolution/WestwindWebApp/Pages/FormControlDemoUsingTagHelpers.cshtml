@page
@model WestwindWebApp.Pages.FormControlDemoUsingTagHelpersModel
@{
}
<div class="alert-info">
    @Model.FeedbackMessage
</div>
<form method="post">

    <div class="mb-3">
        <label asp-for="Username" class="form-label">Username</label>
        <input asp-for="Username" class="form-control" placeholder="Enter your name"/>
    </div>

    <div class="mb-3">
        <label asp-for="Age" class="form-label">Age</label>
        <input asp-for="Age" min="18" max="65" class="form-control"/>
    </div>

    <div class="form-check">
        <label class="form-check-label" asp-for="Gender">Male</label>
        <input class="form-check-input" type="radio" asp-for="Gender" value="Male">
    </div>
    <div class="form-check">
        <label class="form-check-label" asp-for="Gender">Female</label>
        <input class="form-check-input" type="radio" asp-for="Gender" value="Female">
    </div>
    <div class="form-check">
        <label class="form-check-label" asp-for="Gender">Unspecified</label>
        <input class="form-check-input" type="radio" asp-for="Gender" value="Unspecified">
    </div>

    <label asp-for="Department">Department</label>
    <select class="form-select" aria-label="Department" asp-for="Department">
        <option selected>Open this select menu</option>
        <option value="DMIT">Digital Media and IT</option>
        <option value="BAIST">Bachelor of Applied Information Systems Technology</option>
        <option value="CNT">Computer Network Technology</option>
        <option value="CET">Computer Engineering Technology</option>
    </select>

    <div class="mb-3">
        <label asp-for="Comments">Comments</label>
        <textarea asp-for="Comments" cols="50" rows="5" class="form-control"></textarea>
    </div>

    <div class="form-check">
        <label class="form-check-label" asp-for="Subscribe">Subscribe to promotions</label>
        <input class="form-check-input" asp-for="Subscribe">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>